{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "description": {
      "type": "blocks",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Ferretería/Herramientas",
        "Repuestos/Accesorios",
        "Hogar/Electro"
      ]
    },
    "subCategory": {
      "type": "enumeration",
      "enum": [
        "Heladeras",
        "Mesas",
        "Camas",
        "Accesorios",
        "Lámparas",
        "Enchufes",
        "Destornilladores",
        "Taladros",
        "Cintas métricas"
      ]
    }
  }
}
